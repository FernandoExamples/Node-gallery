<div class="row">
  <div class="card col-md-4">
    <div class="card-body">
      <form action="/images/add" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <input class="form-control" placeholder="Image Title" type="text" name="title">
          <div class="form-group">
            <textarea name="description" class="form-control" placeholder="Image description..."></textarea>
          </div>
          <div class="input-group">
            <div class="custom-file">
              <label for="inputGroupFile01" class="custom-file-label">Choose a File</label>
              <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
            </div>
          </div>
          <button class="btn btn-primary">Upload your photo</button>
        </div>
      </form>
    </div>
  </div>

  <div class="col-md-8">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Operations</th>
        </tr>
      </thead>
      <tbody>
        {{#each photos}}
          <tr>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>
              <a target="_blank" href="{{this.imageURL}}" class="mr-2 btn btn-sm">View</a>
              <a href="/images/delete/{{this._id}}" class="btn btn-sm btn-danger">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>